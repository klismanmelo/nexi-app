generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String   @id @default(uuid())
  name         String?
  username     String   @unique
  biography    String
  phoneNumber  String?  @map("phone_number")
  email        String   @unique
  passwordHash String?  @map("password_hash")
  avatarUrl    String?  @map("avatar_url")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  tokens    Token[]
  accounts  Account[]
  links     Link[]
  pageViews PageView[]

  @@map("users")
}

enum TokenType {
  PASSWORD_RECOVER
}

model Token {
  id        String    @id @default(uuid())
  type      TokenType
  createdAt DateTime  @default(now()) @map("created_at")

  user   User   @relation(fields: [userId], references: [id])
  userId String @map("user_id")

  @@map("tokens")
}

enum AccountProvider {
  GITHUB
}

model Account {
  id                String          @id @default(uuid())
  provider          AccountProvider
  providerAccountId String          @unique @map("provider_account_id")

  user   User   @relation(fields: [userId], references: [id])
  userId String @map("user_id")

  @@unique([provider, userId])
  @@map("accounts")
}

model Session {
  id       String      @id @default(uuid())
  userId   String      @map("user_id") // dono da p√°gina
  ipHash   String?
  device   DeviceType?
  browser  String?
  os       String?
  referrer String?
  country  String?
  city     String?

  createdAt DateTime  @default(now())
  endedAt   DateTime?

  pageViews PageView[]
  clicks    LinkClick[]

  @@index([userId])
  @@index([createdAt])
  @@map("sessions")
}

model Link {
  id     String @id @default(uuid())
  userId String @map("user_id")

  title     String
  url       String
  icon      String?
  position  Int
  isActive  Boolean @default(true)
  isVisible Boolean @default(true)

  clickCount Int @default(0)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user   User        @relation(fields: [userId], references: [id])
  clicks LinkClick[]

  @@index([userId])
  @@map("links")
}

model LinkClick {
  id        String @id @default(uuid())
  linkId    String @map("link_id")
  userId    String @map("user_id")
  sessionId String @map("session_id")

  createdAt DateTime @default(now())

  link    Link    @relation(fields: [linkId], references: [id])
  session Session @relation(fields: [sessionId], references: [id])

  @@index([linkId])
  @@index([sessionId])
  @@index([createdAt])
  @@map("link_clicks")
}

model PageView {
  id        String @id @default(uuid())
  userId    String @map("user_id")
  sessionId String @map("session_id")

  createdAt DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id])
  session Session @relation(fields: [sessionId], references: [id])

  @@index([userId])
  @@index([sessionId])
  @@index([createdAt])
  @@map("page_views")
}

enum DeviceType {
  MOBILE
  DESKTOP
  TABLET
  OTHER
}
